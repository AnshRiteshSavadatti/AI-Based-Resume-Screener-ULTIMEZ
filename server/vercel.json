{
  "version": 2,
  "builds": [
    { "src": "server/index.js", "use": "@vercel/node" },
    { "src": "src/main.jsx", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/upload", "dest": "server/index.js" },
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "/src/index.html" }
  ],
  "functions": {
    "server/index.js": {
      "includeFiles": ["server/**"]
    }
  }
}
